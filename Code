# importing requests package
import requests


def NewsFromTimes():
    # BBC news api
    # following query parameters are used
    # source, sortBy and apiKey
    query_params = {
        "source": "most-popular-feed__hed",
        "sortBy": "top",
        "apiKey": "da2c2db5a6c047d2921a27481aa5a9d5"
    }
    main_url = " https://time.com/"

    # fetching data in json format
    res = requests.get(main_url, params=query_params)
    open_times_page = res.json()

    # getting all articles in a string article
    article = open_times_page["most-popular-feed__item-container"]

    # empty list which will
    # contain all trending news
    results = []

    for ar in article:
        results.append(ar["most-popular-feed__item"])

    for i in range(len(results)):
        # printing all trending news
        print(i + 1, results[i])

    # to read the news out loud for us
    from win32com.client import Dispatch
    speak = Dispatch("SAPI.Spvoice")
    speak.Speak(results)


# Driver Code
if __name__ == '__main__':
    # function call
    NewsFromTimes()
